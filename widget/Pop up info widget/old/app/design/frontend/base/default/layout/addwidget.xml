<?xml version="1.0"?>   
<layout version="0.1.0"> 
  <default>
      <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/openpay_widget.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/bootstrap.min.css</name></action>
            <action method="addItem"><type>skin_js</type><name>js/bootstrap.min.js</name></action>
        </reference>
        <reference name="header">
            <block type="addwidget/index" name="popup_widget" template="openpay-widget/popup.phtml" /> 
        </reference>
    </default>
    <catalog_product_view>
         <reference name="product.info.addtocart">
                <block type="addwidget/index" name="productdetails_widget" template="openpay-widget/productdetails.phtml" /> 
        </reference>
    </catalog_product_view>

  <addwidget_index_index>   
    <reference name="root">   
      <action method="setTemplate"><template>page/1column.phtml</template></action>   
    </reference>   
    <reference name="content">   
      <block type="addwidget/index" name="addwidget_index" template="addwidget/index.phtml"/>   
    </reference>   
  </addwidget_index_index>   
</layout>   