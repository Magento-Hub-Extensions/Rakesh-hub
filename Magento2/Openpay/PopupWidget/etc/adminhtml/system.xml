<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="openpay_widgets" translate="label" sortOrder="999"> 
            <!-- add a new tab with id helloworld -->
            <label>Openpay Widgets</label>
        </tab>
        <section id="openpay_widget" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <!-- add a new section with id helloworld and for tab helloworld -->
            <class>separator-top</class>
            <label>Settings</label>
            <tab>openpay_widgets</tab>
            <resource>Openpay_Widget::test_config</resource>
            <group id="active_display" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <!-- add a new group with id active display -->
                <label>Openpay Widgets Configuration</label>
                <field id="scope" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Enable Widgets</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="popupinfotext" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                <!-- add a new group with id active display -->
                <label>Pop Up Info Text Configuration (Header Top)</label>
                <field id="enable_info1" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Enable Info 1</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="info_text1" translate="label" type="textarea" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Enter Text 1</label>
                </field>
                <field id="color1" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Choose Background Color 1</label>
                    <frontend_model>Openpay\PopupWidget\Block\Color</frontend_model>
                </field>
                <field id="font_color1" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Choose Font Color 1</label>
                    <frontend_model>Openpay\PopupWidget\Block\Color</frontend_model>
                </field>
                <field id="popupinfo_logo1" translate="label" type="image" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Upload Logo Image 1</label>
                    <backend_model>Openpay\PopupWidget\Model\Config\Backend\Image</backend_model>
                    <comment>Allowed file types: jpg, jpeg, gif, png</comment>
                    <base_url type="media" scope_info="1">openpay/popupwidget</base_url>
                </field>
                <field id="enable_info2" translate="label" type="select" sortOrder="6" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Enable Info 2</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="info_text2" translate="label" type="textarea" sortOrder="7" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Enter Text 2</label>
                </field>
                <field id="color2" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Choose Background Color 2</label>
                    <frontend_model>Openpay\PopupWidget\Block\Color</frontend_model>
                </field>
                <field id="font_color2" translate="label" type="text" sortOrder="9" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Choose Font Color 2</label>
                    <frontend_model>Openpay\PopupWidget\Block\Color</frontend_model>
                </field>
                <field id="popupinfo_logo2" translate="label" type="image" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Upload Logo Image 2</label>
                    <backend_model>Openpay\PopupWidget\Model\Config\Backend\Image</backend_model>
                    <comment>Allowed file types: jpg, jpeg, gif, png</comment>
                    <base_url type="media" scope_info="1">openpay/popupwidget</base_url>
                </field>
                <field id="enable_info3" translate="label" type="select" sortOrder="11" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Enable Info 3</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="info_text3" translate="label" type="textarea" sortOrder="12" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Enter Text 3</label>
                </field>
                <field id="color3" translate="label" type="text" sortOrder="13" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Choose Background Color 3</label>
                    <frontend_model>Openpay\PopupWidget\Block\Color</frontend_model>
                </field>
                <field id="font_color3" translate="label" type="text" sortOrder="14" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Choose Font Color 3</label>
                    <frontend_model>Openpay\PopupWidget\Block\Color</frontend_model>
                </field>
                <field id="popupinfo_logo3" translate="label" type="image" sortOrder="15" showInDefault="1" showInWebsite="0" showInStore="0">
                    <!-- add a new field with id scope -->
                    <label>Upload Logo Image 3</label>
                    <backend_model>Openpay\PopupWidget\Model\Config\Backend\Image</backend_model>
                    <comment>Allowed file types: jpg, jpeg, gif, png</comment>
                    <base_url type="media" scope_info="1">openpay/popupwidget</base_url>
                </field>
            </group>
        </section>
    </system>
</config>
